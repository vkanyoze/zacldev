  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set environment variables",
          "pm.environment.set('base_url', 'http://localhost:8000/api');"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Save auth token from login response",
          "if (pm.response.code === 200 && pm.request.url.path.includes('login')) {",
          "    var jsonData = pm.response.json();",
          "    pm.environment.set('auth_token', jsonData.token);",
          "    console.log('Auth token saved:', jsonData.token);",
          "}"
        ]
      }
    }
  ],
  "variable": [
